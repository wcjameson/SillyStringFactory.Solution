@{
  Layout = "_Layout";
}

@using SillyStringFactory.Models;
@model List<SillyStringFactory.Models.Engineer>;

  <h1>Engineers</h1>

  @if (@Model.Count == 0)
  {
    <h2>No engineers have been added yet</h2>
  }  

  @foreach (Engineer engineer in Model)
  {
    <li>@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</li>
  }

  <p>@Html.ActionLink("Add new Engineer", "Create")</p>
