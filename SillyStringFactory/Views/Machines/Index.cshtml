@{
  Layout = "_Layout";
}

@using SillyStringFactory.Models;
@model List<SillyStringFactory.Models.Machine>;

<h1> Machines </h1>

@if (@Model.Count == 0)
{
  <h3> No machines are present </h3>
}

@foreach (Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.Description}", "Details", new { id = machine.MachineId })</li>
}
<br>
<p>@Html.ActionLink("Add Machine", "Create")</p>
